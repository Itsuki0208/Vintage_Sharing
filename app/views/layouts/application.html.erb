<!DOCTYPE html>
<html>
  <head>
    <title>VintageSharing</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1>ロゴ画像</h1>
      <ul>
        <% if member_signed_in? %>
          <li><%= link_to "投稿する" %></li>
        <% elsif admin_signed_in? %>
          <li><%= link_to "投稿一覧" %></li>
        <% else %>
          <li><%= link_to "投稿する" %></li>
          <li><%= link_to "新規登録", new_member_registration_path  %></li>
          <li><%= link_to "ログイン" %></li>
        <% end %>
      </ul>
    </header>
    <%= yield %>
  </body>
</html>
